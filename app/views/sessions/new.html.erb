
<h3> Log in <span class = "error"> <%= flash[:login_error] %> </span> </h3>
<%= form_tag create_session_path, :id => "login_form" do %>
	<div class = "label-container">
		<%= label_tag "Email:" %>
	</div>
	<%= email_field_tag "email",  "" %><br />
	<div class = "label-container">
		<%= label_tag "Password:"%>
	</div>
	<%= password_field_tag "password", "" %>
	<br />
	<div id = "log_in" class = "btn green med form-submit"> Log in </div>

<% end %>

<br/>
<h3> Don't have an account? Sign up <span class = "error"> <%= flash[:user_error] %> </span> </h3>
<%= form_for(@user) do |f| %>
	<div id="error-container">
	    <ul>
	    <% @user.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	</div>
	<div class = "label-container">
		<%= f.label :email, "Email:" %>
	</div>
	<%= f.text_field :email %><br />
		<div class = "label-container">
	<%= f.label :password, "Password:"%>
			</div>
	<%= f.password_field :password %><br />
	<div class = "label-container">
		<%= f.label :password_confirmation, "Confirmation:"%>
	</div>
    <%= f.password_field :password_confirmation %> 
    <br />
    <div id = "create_account" class = "btn green med form-submit"> Create Account</div>
<% end %>



