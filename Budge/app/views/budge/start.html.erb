 <h1> Budge </h1> <%= link_to "Summary", summary_path %>

<div ng-controller="ExpensesCtrl">
<form ng-submit="addExpense()">
	<div class = "label-container">
		<label> Amount: </label>
	</div>
	<input type="text"  ng-model="newExpense.amount">
	<div class = "label-container">
		<label> Type: </label>
	</div>
	<input type="text"  ng-model="newExpense.expense_type">
	<div class = "label-container">
		<label> Date: </label>
	</div>
	<input type="text" class = "date-picker" ng-model="newExpense.expense_date">
	<input type ="submit" class = "btn green small" value="Add">
</form>

<%= form_tag('/upload', multipart:true, id: 'upload') do %>
<%= file_field_tag "file", accept: 'text/csv' %>
<%= submit_tag "Upload Expenses" %>
<% end %>
